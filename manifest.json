{
    "manifest_version": 3,
    "name": "LLM Chat Scraper",
    "version": "1.1",
    "description": "Scrapes and saves the entire conversation history of Gemini and ChatGPT conversations.",
    "icons": {
        "128": "icon128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "clipboardWrite"
    ],
    "host_permissions": [
        "https://gemini.google.com/*",
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*",
                "https://chatgpt.com/*",
                "https://chat.openai.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}